@model Proyecto_PC_Soluciones.Models.Articulo

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<h1>Create</h1>

<h4>Articulo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nom_articulo" class="control-label"></label>
                <input asp-for="nom_articulo" class="form-control" />
                <span asp-validation-for="nom_articulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pre_articulo" class="control-label"></label>
                <input asp-for="pre_articulo" class="form-control" />
                <span asp-validation-for="pre_articulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="stock_articulo" class="control-label"></label>
                <input asp-for="stock_articulo" class="form-control" />
                <span asp-validation-for="stock_articulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Create" class="btn btn-primary">Limpiar</a>
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">Retornar</a>
            </div>
        </form>
    </div>
</div>

<div>
     @ViewBag.mensaje
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
