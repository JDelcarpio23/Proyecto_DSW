@model Proyecto_PC_Soluciones.Models.Articulo

@{
    ViewData["Title"] = "Agregar";
}

<h1>Agregar</h1>
<h4>Articulo</h4>
<hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.id_articulo)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.id_articulo)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.nom_articulo)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.nom_articulo)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.pre_articulo)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.pre_articulo)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.stock_articulo)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.stock_articulo)</dd>
    </dl>
<div>
    <form asp-action="Agregar" method="post">
        @Html.Hidden("codigo",Model.id_articulo)<!--Valor Oculto-->
        <em>Ingrese la cantidad</em>
        @Html.TextBox("cantidad",1,new{type="number", min=1, max=Model.stock_articulo})
        <br />
        <br />
        <input type="submit" value="Agregar" class="btn btn-primary" />
        <a asp-action="Portal" asp-controller="ECommerce" class="btn btn-primary">Ir al portal</a>
    </form>
</div>
<div>
    @ViewBag.mensaje
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
