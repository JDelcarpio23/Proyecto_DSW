@model Proyecto_PC_Soluciones.Models.Usuarios

@{
    ViewData["Title"] = "Create";
}

<h1>Registrar</h1>

<h4>Usuarios</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nom_usuario" class="control-label"></label>
                <input asp-for="nom_usuario" class="form-control" />
                <span asp-validation-for="nom_usuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dni_usuario" class="control-label"></label>
                <input asp-for="dni_usuario" class="form-control" />
                <span asp-validation-for="dni_usuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="user_usuario" class="control-label"></label>
                <input asp-for="user_usuario" class="form-control" />
                <span asp-validation-for="user_usuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pass_usuario" class="control-label"></label>
                <input type="password" asp-for="pass_usuario" class="form-control" />
                <span asp-validation-for="pass_usuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_tipo_usuario" class="control-label"></label>
                <select asp-for="id_tipo_usuario" asp-items="@ViewBag.tipos" class="form-control"></select>
                <span asp-validation-for="id_tipo_usuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Create" class="btn btn-primary">Nuevo</a>
                <input type="submit" value="Registrar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">Retornar</a>
            </div>
        </form>
    </div>
</div>

<div>
    @ViewBag.mensaje
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
