@model Proyecto_PC_Soluciones.Models.Usuarios

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<h1>Eliminar</h1>

<h3>¿Está seguro de Eliminar a este usuario?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.id_usuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.id_usuario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nom_usuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nom_usuario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.dni_usuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.dni_usuario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.user_usuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.user_usuario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.pass_usuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.pass_usuario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.id_tipo_usuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.id_tipo_usuario)
        </dd>
    </dl>    
    <form asp-action="Delete">
        <input type="submit" value="Confirmar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary">Retornar</a>
    </form>
</div>
<div>
    @ViewBag.mensaje
</div>
