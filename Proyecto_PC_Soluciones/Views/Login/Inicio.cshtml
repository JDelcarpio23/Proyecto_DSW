@model Proyecto_PC_Soluciones.Models.Usuarios

@{
    ViewData["Title"] = "Inicio";
}

<h1>Inicio de Sesión</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Inicio">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="user_usuario" class="control-label"></label>
                <input asp-for="user_usuario" type="email" class="form-control" />
                <span asp-validation-for="user_usuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pass_usuario" class="control-label"></label>
                <input asp-for="pass_usuario" type="password" class="form-control" />
                <span asp-validation-for="pass_usuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Inicio" class="btn btn-primary">Limpiar</a>
                <input type="submit" value="Loguear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <p>Si aún no tienes cuenta: <a asp-action="Create">Regístrate</a></p>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
